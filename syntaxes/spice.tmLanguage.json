		"brackets": {
			"patterns": [
				{
					"begin": "{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.begin.bracket.curly.spice"
						}
					},
					"end": "}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.end.bracket.curly.spice"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				},
				{
					"begin": "\\(",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.begin.bracket.round.spice"
						}
					},
					"end": "\\)",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.end.bracket.round.spice"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				},
				{
					"begin": "<",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.begin.bracket.diamond.spice"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.end.bracket.diamond.spice"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				}
			]
		},
		"operators": {
			"comment": "Note that the order here is very important!",
			"patterns": [
				{
					"match": "\\-\\-",
					"name": "keyword.operator.decrement.spice"
				},
				{
					"match": "\\+\\+",
					"name": "keyword.operator.increment.spice"
				},
				{
					"match": "(==|!=|<=|>=|<(?!<)|>(?!>))",
					"name": "keyword.operator.comparison.spice"
				},
				{
					"match": "(&&|\\|\\||!)",
					"name": "keyword.operator.logical.spice"
				},
				{
					"match": "(=|\\+=|\\-=|\\*=|/=)",
					"name": "keyword.operator.assignment.spice"
				},
				{
					"match": "(\\+|\\-|\\*|/)",
					"name": "keyword.operator.arithmetic.spice"
				},
				{
					"match": "(&(?!\\^)|\\||\\^|&\\^|<<|>>)",
					"name": "keyword.operator.arithmetic.bitwise.spice"
				}
			]
		},
