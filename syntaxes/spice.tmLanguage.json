											]
										},
										"6": {
											"name": "punctuation.separator.constant.numeric.spice"
										},
										"7": {
											"name": "keyword.other.unit.imaginary.spice"
										},
										"8": {
											"name": "keyword.other.unit.octal.spice"
										},
										"9": {
											"name": "constant.numeric.octal.spice",
											"patterns": [
												{
													"match": "(?<=[0-9a-fA-F])_(?=[0-9a-fA-F])",
													"name": "punctuation.separator.constant.numeric.spice"
												}
											]
										},
										"10": {
											"name": "punctuation.separator.constant.numeric.spice"
										},
										"11": {
											"name": "keyword.other.unit.imaginary.spice"
										},
										"12": {
											"name": "keyword.other.unit.hexadecimal.spice"
										},
										"13": {
											"name": "constant.numeric.hexadecimal.spice",
											"patterns": [
												{
													"match": "(?<=[0-9a-fA-F])_(?=[0-9a-fA-F])",
													"name": "punctuation.separator.constant.numeric.spice"
												}
											]
										},
										"14": {
											"name": "punctuation.separator.constant.numeric.spice"
										},
										"15": {
											"name": "keyword.other.unit.imaginary.spice"
										}
									}
								},
								{
									"match": "(?:(?:[0-9a-zA-Z_\\.])|(?<=[eEpP])[+-])+",
									"name": "invalid.illegal.constant.numeric.spice"
								}
							]
						}
					]
				}
			}
		},
		"imports": {
			"patterns": [
				{
					"match": "((?!\\s+\")[^\\s]*)?\\s*((\")([^\"]*)(\"))",
					"captures": {
						"1": {
							"name": "entity.alias.import.spice"
						},
						"2": {
							"name": "string.quoted.double.spice"
						},
						"3": {
							"name": "punctuation.definition.string.begin.spice"
						},
						"4": {
							"name": "entity.name.import.spice"
						},
						"5": {
							"name": "punctuation.definition.string.end.spice"
						}
					}
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "(\\w+(?:,\\s*\\w+)*)(\\s+\\*?\\w+(?:\\.\\w+)?\\s*)?(?=\\s*=)",
					"captures": {
						"1": {
							"patterns": [
								{
									"match": "\\d\\w*",
									"name": "invalid.illegal.identifier.spice"
								},
								{
									"match": "\\w+",
									"name": "variable.other.assignment.spice"
								},
								{
									"include": "#delimiters"
								}
							]
						},
						"2": {
							"patterns": [
								{
									"include": "$self"
								}
							]
						}
					}
				}
			]
		},
		"delimiters": {
			"patterns": [
				{
					"match": ",",
					"name": "punctuation.other.comma.spice"
				},
				{
					"match": ";",
					"name": "punctuation.other.semicolon.spice"
				},
				{
					"match": "\\.",
					"name": "punctuation.other.period.spice"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"comment": "Flow control keywords",
					"match": "\\b(as|for|if|return|while)\\b",
					"name": "keyword.control.spice"
				},
				{
					"match": "\\bconst\\b",
					"name": "keyword.const.spice"
				},
				{
					"match": "\\bf\\b",
					"name": "keyword.function.spice"
				},
				{
					"match": "\\bp\\b",
					"name": "keyword.procedure.spice"
				},
				{
					"match": "\\btype\\b",
					"name": "keyword.type.spice"
				},
				{
					"match": "\\bnew\\b",
					"name": "keyword.new.spice"
				}
			]
		},
		"storage_types": {
			"patterns": [
				{
					"match": "\\bbool\\b",
					"name": "storage.type.boolean.spice"
				},
				{
					"match": "\\bdouble\\b",
					"name": "storage.type.double.spice"
				},
				{
					"match": "\\bdyn\\b",
					"name": "storage.type.dyn.spice"
				},
				{
					"match": "\\bint\\b",
					"name": "storage.type.int.spice"
				},
				{
					"match": "\\bstring\\b",
					"name": "storage.type.string.spice"
				},
				{
					"match": "\\bstruct\\b",
					"name": "storage.type.struct.spice"
				}
			]
		}
	}
}